@page "/"
@inject IJSRuntime JSRuntime
@using Microsoft.AspNetCore.Components.Web

<PageTitle>Day Planner - Your Daily Adventure Awaits!</PageTitle>

<!-- Section 1: Hero/Introduction -->
<section id="home" class="hero-section">
    <div class="hero-content">
        <div class="hero-text">
            <h1 class="hero-title">Your Daily Adventure Awaits!</h1>
            <p class="hero-subtitle">
                Welcome to your very own Visual Schedule Day Planner! 
                This special tool helps you see what's coming next in your day, 
                so you can feel prepared and confident.
            </p>
            <p class="hero-description">
                Every day is a new adventure, and we're here to help you navigate it with ease. 
                You can see all your activities, check them off as you complete them, 
                and celebrate your amazing accomplishments!
            </p>
            <div class="hero-actions">
                <a href="#services" class="learn-more-btn" @onclick="ScrollToServices" @onclick:preventDefault="true">
                    <span class="btn-text">Learn More</span>
                </a>
            </div>
        </div>
        <div class="hero-illustration">
            <img src="images/DayPlanner.webp" alt="Day Planner - Visual Schedule for children" class="hero-image" />
        </div>
    </div>
    <div class="scroll-indicator">
        <span>â†“</span>
    </div>
</section>

<!-- Section 2: Services -->
<section id="services" class="services-section">
    <div class="services-container">
        <h2 class="section-title">What We Offer</h2>
        <p class="section-subtitle">Everything you need to have an amazing, organized day!</p>
        
        <div class="services-grid">
            <div class="service-card">
                <div class="service-icon">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M19 3H5C3.9 3 3 3.9 3 5V19C3 20.1 3.9 21 5 21H19C20.1 21 21 20.1 21 19V5C21 3.9 20.1 3 19 3ZM19 19H5V8H19V19Z" fill="var(--primary-color)"/>
                        <path d="M7 10H17V12H7V10ZM7 14H17V16H7V14Z" fill="var(--primary-color)"/>
                    </svg>
                </div>
                <h3 class="service-title">Create Your Schedule</h3>
                <p class="service-description">
                    Build your daily plan with colorful activities. 
                    Add times, locations, and fun icons to make it yours!
                </p>
            </div>
            
            <div class="service-card">
                <div class="service-icon">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 4.5C7 4.5 2.73 7.61 1 12C2.73 16.39 7 19.5 12 19.5C17 19.5 21.27 16.39 23 12C21.27 7.61 17 4.5 12 4.5ZM12 17C9.24 17 7 14.76 7 12C7 9.24 9.24 7 12 7C14.76 7 17 9.24 17 12C17 14.76 14.76 17 12 17ZM12 9C10.34 9 9 10.34 9 12C9 13.66 10.34 15 12 15C13.66 15 15 13.66 15 12C15 10.34 13.66 9 12 9Z" fill="var(--primary-color)"/>
                    </svg>
                </div>
                <h3 class="service-title">View Your Day</h3>
                <p class="service-description">
                    See all your activities in one place. 
                    Know what's happening now and what's coming next!
                </p>
            </div>
            
            <div class="service-card">
                <div class="service-icon">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 16.17L4.83 12L3.41 13.41L9 19L21 7L19.59 5.59L9 16.17Z" fill="var(--primary-color)"/>
                    </svg>
                </div>
                <h3 class="service-title">Track Progress</h3>
                <p class="service-description">
                    Mark activities as complete and watch your day unfold. 
                    Feel proud of everything you accomplish!
                </p>
            </div>
        </div>
        
        <div class="get-started-container">
            <a href="/today" class="get-started-btn">
                <span class="btn-text">Get Started!</span>
            </a>
        </div>
    </div>
</section>

<!-- Section 3: About Statped -->
<section id="statped" class="statped-section">
    <div class="statped-container">
        <h2 class="section-title">About the Project</h2>
        <div class="statped-content">
            <div class="statped-text">
                <p class="statped-intro">
                    This Visual Schedule Day Planner was especially designed for <strong>Statped</strong>, 
                    a Norwegian national service that supports children and pupils with special educational needs.
                </p>
                <p class="statped-mission">
                    Statped's mission is to help children and young people with special needs lead independent lives 
                    and actively participate in education, work, and society. They work with structure, routines, 
                    and universal design of digital tools - just like this planner!
                </p>
                <p class="statped-support">
                    We believe that every child deserves tools that help them succeed. 
                    This planner is designed with you in mind, using clear visuals, simple navigation, 
                    and encouraging messages to support your daily journey.
                </p>
            </div>
            <div class="statped-visual">
                <div class="visual-placeholder">
                    <svg width="120" height="120" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" fill="var(--primary-color)"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private async Task ScrollToServices(MouseEventArgs e)
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("scrollToSection", "services");
        }
        catch
        {
            // Fallback if JS is not loaded
        }
    }
}
