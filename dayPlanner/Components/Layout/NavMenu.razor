@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation
@using Microsoft.AspNetCore.Components.Web

<nav class="top-navbar">
    <div class="navbar-container">
        <a class="navbar-brand" href="/">Day Planner</a>
        <div class="nav-links">
            <a class="nav-link" href="#home" @onclick="ScrollToHome" @onclick:preventDefault="true">Home</a>
            <a class="nav-link" href="#services" @onclick="ScrollToServices" @onclick:preventDefault="true">Services</a>
            <a class="nav-link" href="#statped" @onclick="ScrollToStatped" @onclick:preventDefault="true">About Statped</a>
        </div>
    </div>
</nav>

@code {
    private async Task ScrollToHome(MouseEventArgs e)
    {
        await ScrollToSection("home");
    }

    private async Task ScrollToServices(MouseEventArgs e)
    {
        await ScrollToSection("services");
    }

    private async Task ScrollToStatped(MouseEventArgs e)
    {
        await ScrollToSection("statped");
    }

    private async Task ScrollToSection(string sectionId)
    {
        try
        {
            // If we're not on the home page, navigate there first
            var currentPath = Navigation.Uri.Replace(Navigation.BaseUri, "");
            if (currentPath != "/" && !currentPath.StartsWith("/#"))
            {
                Navigation.NavigateTo($"/#{sectionId}");
                return;
            }

            await JSRuntime.InvokeVoidAsync("scrollToSection", sectionId);
        }
        catch
        {
            // Fallback: navigate to home page with hash
            Navigation.NavigateTo($"/#{sectionId}");
        }
    }
}

