@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: var(--primary-color, #0EA5E9);">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Day Planner</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#home" @onclick="ScrollToHome" @onclick:preventDefault="true">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#services" @onclick="ScrollToServices" @onclick:preventDefault="true">Services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#statped" @onclick="ScrollToStatped" @onclick:preventDefault="true">About the Project</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private async Task ScrollToHome()
    {
        await ScrollToSection("home");
    }

    private async Task ScrollToServices()
    {
        await ScrollToSection("services");
    }

    private async Task ScrollToStatped()
    {
        await ScrollToSection("statped");
    }

    private async Task ScrollToSection(string sectionId)
    {
        try
        {
            // If we're not on the home page, navigate there first
            var currentPath = Navigation.Uri.Replace(Navigation.BaseUri, "");
            if (currentPath != "/" && !currentPath.StartsWith("/#"))
            {
                Navigation.NavigateTo($"/#{sectionId}");
                return;
            }

            await JSRuntime.InvokeVoidAsync("scrollToSection", sectionId);
        }
        catch
        {
            // Fallback: navigate to home page with hash
            Navigation.NavigateTo($"/#{sectionId}");
        }
    }
}
