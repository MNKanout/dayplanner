@using dayPlanner.Data.Entities
@using dayPlanner.Services
@using Microsoft.AspNetCore.Components

<div class="activity-form">
    <h4>Edit Activity</h4>
    <EditForm Model="@Activity" OnValidSubmit="HandleSave">
        <DataAnnotationsValidator />
        
        <div class="mb-3">
            <label class="form-label">Title *</label>
            <InputText @bind-Value="Activity.Title" class="form-control" />
            <ValidationMessage For="@(() => Activity.Title)" />
        </div>

        <div class="mb-3">
            <label class="form-label">Location</label>
            <InputText @bind-Value="Activity.Location" class="form-control" />
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Start Time</label>
                <input type="time" 
                       class="form-control" 
                       value="@GetTimeString(startTime)"
                       @onchange="@((ChangeEventArgs e) => startTime = ParseTime(e.Value?.ToString()))" />
            </div>
            <div class="col-md-6">
                <label class="form-label">End Time</label>
                <input type="time" 
                       class="form-control" 
                       value="@GetTimeString(endTime)"
                       @onchange="@((ChangeEventArgs e) => endTime = ParseTime(e.Value?.ToString()))" />
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Icon</label>
            <div class="icon-selector">
                @foreach (var iconKey in DayPlanConstants.IconKeys)
                {
                    <button type="button"
                            class="icon-button @(Activity.IconKey == iconKey ? "selected" : "")"
                            @onclick="() => Activity.IconKey = iconKey">
                        @GetIconEmoji(iconKey)
                    </button>
                }
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Color</label>
            <div class="color-selector">
                @foreach (var colorKey in DayPlanConstants.ColorKeys)
                {
                    <button type="button"
                            class="color-button @(Activity.ColorKey == colorKey ? "selected" : "")"
                            style="background-color: @GetColorValue(colorKey)"
                            @onclick="() => Activity.ColorKey = colorKey">
                        @if (Activity.ColorKey == colorKey)
                        {
                            <span>âœ“</span>
                        }
                    </button>
                }
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-secondary" @onclick="HandleCancel">Cancel</button>
        </div>
    </EditForm>
</div>

@code {
    [Parameter] public Activity Activity { get; set; } = null!;
    [Parameter] public EventCallback<Activity> OnSave { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private TimeOnly? startTime
    {
        get => Activity.StartTime;
        set => Activity.StartTime = value;
    }

    private TimeOnly? endTime
    {
        get => Activity.EndTime;
        set => Activity.EndTime = value;
    }

    private async Task HandleSave()
    {
        await OnSave.InvokeAsync(Activity);
    }

    private async Task HandleCancel()
    {
        await OnCancel.InvokeAsync();
    }

    private string GetIconEmoji(string iconKey)
    {
        return iconKey switch
        {
            "home" => "ðŸ ",
